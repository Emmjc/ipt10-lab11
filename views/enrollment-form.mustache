<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrollment Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Arial', sans-serif;
        }
        .form-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            color: #004d99;
            margin-bottom: 20px;
        }
        .btn-primary {
            width: 100%;
            background-color: #004d99;
            border-color: #004d99;
        }
        .btn-primary:hover {
            background-color: #003366;
            border-color: #003366;
        }
        .nav-links {
            text-align: center;
            margin-top: 20px;
        }
        .nav-links a {
            color: #004d99;
            margin: 0 15px;
            text-decoration: none;
        }
        .nav-links a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h1>Enrollment Form</h1>
        <form action="/enroll" method="POST">
            <div class="mb-3">
                <label for="course" class="form-label">Course</label>
                <select name="course_code" id="course" class="form-select" required>
                    {{#courses}}
                    <option value="{{course_code}}">{{course_name}}</option>
                    {{/courses}}
                </select>
            </div>

            <div class="mb-3">
                <label for="student" class="form-label">Student</label>
                <select name="student_code" id="student" class="form-select" required>
                    {{#students}}
                    <option value="{{student_code}}">{{first_name}} {{last_name}}</option>
                    {{/students}}
                </select>
            </div>

            <div class="mb-3">
                <label for="enrollment_date" class="form-label">Enrollment Date</label>
                <input type="date" name="enrollment_date" id="enrollment_date" class="form-control" value="{{current_date}}" required>
            </div>

            <button type="submit" class="btn btn-primary">Enroll Student</button>
        </form>

        <div class="nav-links">
            <a href="/courses">List of Courses</a>
            <a href="/students">List of Students</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
